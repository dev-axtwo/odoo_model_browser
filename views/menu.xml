<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to open ir.model list -->
    <record id="action_model_browser" model="ir.actions.act_window">
        <field name="name">All Models</field>
        <field name="res_model">ir.model</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('transient', '=', False)]</field>
        <field name="context">{'search_default_name': 1}</field>
    </record>

    <!-- Menu item in Settings for quick access -->
    <menuitem
        id="menu_model_browser"
        name="Model Browser"
        parent="base.menu_administration"
        sequence="100"
        action="action_model_browser"
        groups="base.group_system"/>
</odoo>
